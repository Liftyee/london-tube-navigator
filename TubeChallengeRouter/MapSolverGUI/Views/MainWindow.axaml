<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MapSolverGUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:CompileBindings="True"
        x:Class="MapSolverGUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MapSolverGUI"
        Width="512"
        Height="512">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <TabControl>
        <TabItem Header="Solver Controls">
            <StackPanel DataContext="{Binding SolverControlViewModel}" Spacing="10">
                <Grid ColumnDefinitions="*,*,2*">
                    <TextBlock Grid.Column="0" 
                               Text="Random swap probability:"
                               TextWrapping="Wrap"/>
                    <TextBox Grid.Column="1" 
                             Text="{Binding SwapProb}"/>
                    <Slider Grid.Column="2" 
                            Value="{Binding SwapProb}"
                            Minimum="0"
                            Maximum="1"/>
                </Grid>
                <WrapPanel Orientation="Horizontal">
                    <Button Command="{Binding TestControls}"
                            Content="Test controls"/>
                    <Button Command="{Binding SolveCommand}" 
                            Content="Generate route"/>
                </WrapPanel>
                <ProgressBar Margin="0 10" Height="20" 
                             Minimum="0" Maximum="100" Value="{Binding SolveProgress}"
                             ShowProgressText="True"/>
                
                <Border CornerRadius="10" Margin="5"
                        BorderThickness="1" BorderBrush="{DynamicResource SystemAccentColor}">
                    <Grid ColumnDefinitions="*,Auto">
                        <ItemsControl Margin="5"
                                      ItemsSource="{Binding OutputLog}" />

                        <Button Grid.Column="1" 
                                VerticalContentAlignment="Top"
                                VerticalAlignment="Top"
                                Background="Transparent"
                                Command="{Binding OutputLog.Clear}"
                                Content="Clear ❌"/>
                    </Grid>
                </Border>
            </StackPanel>
        </TabItem>
                
        <TabItem Header="SVG Test">
            <StackPanel DataContext="{Binding SVGMapViewModel}" Spacing="10">
                <TextBlock Text="Test SVG display"/>
                <TextBox Text="{Binding StationName}"/>
                <Button Command="{Binding TestCommand}"
                        Content="Open the pod bay doors, HAL." />
                <Button Command="{Binding UpdateSVG}"
                        Content="Update SVG (Test)"/>
                <ItemsControl Margin="5"
                              ItemsSource="{Binding ConversationLog}"/>
                <Svg Path="/home/yee/tubemap.svg" IsVisible="{Binding showSVG}"/>
                <!-- the Draw function of this canvas is set in MainWindow.axaml.cs -->
                <SKCanvasControl Name="CanvasControl"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
